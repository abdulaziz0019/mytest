<%= render 'shared/errors', obj:@article %>


<div class="row">
  <div class="col-xs-12">
<%= form_for(@article, :html => {class: "form-horizontal", role:'form'}) do |a| %>
<div class="form-group">
  <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-8">
        <%= a.text_field :title , class: "form-control", placeholder: 'title here' %>
    </div>
</div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
      <div class="col-sm-8">
          <%= a.text_area :description, rows: 10 ,class: "form-control", placeholder: 'enter the description' %>
      </div>
 </div>
      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit :submit , class: "btn btn-primary btn-lg" %>
          </div>
      </div>
<%end%>
</div>

</div>
