<%= render 'shared/errors', obj:@category %>

<div class="row">
  <div class="col-xs-12">
<%= form_for(@category, :html => {class: "form-horizontal", role:'form'}) do |a| %>
<div class="form-group">
  <label class="col-sm-2 control-label">Category name </label>
    <div class="col-sm-8">
        <%= a.text_field :name , class: "form-control", placeholder: 'enter category name' %>
    </div>
</div>
      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit class: "btn btn-primary btn-lg" %>
          </div>
      </div>
<%end%>
</div>

</div>
